{
   "private": true,
   "devDependencies": {
      "husky": "^4.3.0",
      "lint-staged": "^10.5.1"
   },
   "husky": {
      "hooks": {
        "pre-commit": ".git_hooks/pre-commit.d/lint-php.sh && .git_hooks/pre-commit.d/composer-validate.sh && .git_hooks/pre-commit.d/php-cs-fixer.sh"
      }
   },
   "lint-staged": {
      "**/*.php": ["composer cs"]
   }
}
